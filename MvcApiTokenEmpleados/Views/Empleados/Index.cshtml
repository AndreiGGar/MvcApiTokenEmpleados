@model IEnumerable<MvcApiTokenEmpleados.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h4>Api Empleados Token</h4>

<h4>@ViewData["MENSAJE"]</h4>

@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Oficio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Director)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        <a asp-controller="Empleados" asp-action="Details" asp-route-id="@item.IdEmpleado" class="btn btn-outline-success">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

